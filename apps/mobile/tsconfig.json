{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/*": ["./*"],
			"@vero/api": ["../../packages/api/src"],
			"@vero/api/*": ["../../packages/api/src/*"],
			"@vero/auth": ["../../packages/auth/src"],
			"@vero/auth/*": ["../../packages/auth/src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
	"references": [{ "path": "../../packages/api" }, { "path": "../../packages/auth" }]
}
