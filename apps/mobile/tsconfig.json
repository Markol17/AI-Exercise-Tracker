{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@vero/api": ["../../packages/api/src"],
			"@vero/api/*": ["../../packages/api/src/*"],
			"@vero/db": ["../../packages/db/src"],
			"@vero/db/*": ["../../packages/db/src/*"],
			"@vero/auth": ["../../packages/auth/src"],
			"@vero/auth/*": ["../../packages/auth/src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
