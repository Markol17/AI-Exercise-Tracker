{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"jsx": "react-native",
		"lib": ["ES2022"],
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@vero/api": ["../../packages/api/src"],
			"@vero/api/*": ["../../packages/api/src/*"],
			"@vero/auth": ["../../packages/auth/src"],
			"@vero/auth/*": ["../../packages/auth/src/*"]
		}
	},
	"references": [{ "path": "../../packages/api" }, { "path": "../../packages/auth" }]
}
