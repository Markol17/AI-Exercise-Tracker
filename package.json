{
	"name": "ai-exercise-tracker",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "npm run dev:server & npm run dev:perception & npm run dev:mobile",
		"dev:server": "npm run dev --workspace=@ai-exercise-tracker/server",
		"dev:mobile": "npm run start --workspace=@ai-exercise-tracker/mobile",
		"dev:run:ios": "npm run ios --workspace=@ai-exercise-tracker/mobile",
		"dev:run:android": "npm run android --workspace=@ai-exercise-tracker/mobile",
		"dev:run:web": "npm run web --workspace=@ai-exercise-tracker/mobile",
		"dev:perception": "cd apps/perception && ./run.sh",
		"build": "npm run build --workspaces",
		"build:tsc": "tsc --build packages/api packages/auth packages/db apps/server apps/mobile",
		"type-check": "tsc --build --dry packages/api packages/auth packages/db apps/server apps/mobile",
		"db:up": "docker-compose up -d postgres",
		"db:down": "docker-compose down",
		"db:migrate": "npm run db:migrate --workspace=@ai-exercise-tracker/db",
		"db:generate": "npm run db:generate --workspace=@ai-exercise-tracker/db",
		"db:studio": "npm run db:studio --workspace=@ai-exercise-tracker/db",
		"db:push": "npm run db:push --workspace=@ai-exercise-tracker/db",
		"clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'package-lock.json' -type f -delete"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"typescript": "~5.8.3"
	}
}
