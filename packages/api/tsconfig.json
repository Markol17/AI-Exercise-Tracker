{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2022"],
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@ai-exercise-tracker/db/*": ["../db/src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"references": [{ "path": "../db" }]
}
